<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- REQUIRED SETTINGS -->
    <settings>
        <spinner>landingcategories_listing_columns</spinner>
    </settings>

    <!-- DATA SOURCE -->
    <dataSource name="landingcategories_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">LotusLandingcategoriesListingDataSource</argument>
            <argument name="name" xsi:type="string">landingcategories_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
        </argument>
    </dataSource>

    <!-- TOOLBAR REQUIRED -->
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <!-- COLUMNS -->
    <columns name="columns" class="Magento\Ui\Component\Listing\Columns">
        <column name="entity_id">
            <settings>
                <label>ID</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="mobile_category_image">
            <settings>
                <label>Mobile Image</label>
            </settings>
        </column>

        <actionsColumn name="actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>

</listing>
