<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <dataSource name="landingcategories_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Lotus\Landingcategories\Ui\Component\Listing\DataProvider</argument>
            <argument name="name" xsi:type="string">landingcategories_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
        </argument>
    </dataSource>

    <fieldset name="general">

        <field name="entity_id">
            <settings>
                <dataType>text</dataType>
                <label>ID</label>
                <visible>false</visible>
            </settings>
        </field>

        <field name="mobile_category_image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">

                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>

                    <item name="label" xsi:type="string">Category Image for Mobile App</item>
                    <item name="notice" xsi:type="string">
                        Note: Maximum Image Size 50KB, Width 174px and Height 146px.
                    </item>

                    <item name="previewTmpl" xsi:type="string">Lotus_Landingcategories/image-preview</item>

                    <item name="dataScope" xsi:type="string">mobile_category_image</item>

                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="landingcategories/index/categoryImageUploadMobile"/>
                    </item>

                    <item name="allowedExtensions" xsi:type="array">
                        <item name="jpg" xsi:type="string">jpg</item>
                        <item name="jpeg" xsi:type="string">jpeg</item>
                        <item name="png" xsi:type="string">png</item>
                    </item>
                </item>

                <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>

    </fieldset>

</form>
